{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate code for running Nightwatch tests in TypeScript",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist logs tests_output",
    "test": "npm run clean && nightwatch --env chrome",
    "test-browserstack": "npm run clean && nightwatch --env browserstack.chrome --verbose",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaibhavsingh97/typescript-boilerplate.git"
  },
  "keywords": [
    "nightwatch",
    "e2e",
    "typescript"
  ],
  "author": "Vaibhav Singh <vaibhav.s@browserstack.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vaibhavsingh97/typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/vaibhavsingh97/typescript-boilerplate#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "chromedriver": "^106.0.1",
    "eslint": "^8.25.0",
    "geckodriver": "^3.1.0",
    "ts-node": "^10.9.1"
  },
  "dependencies": {
    "@types/nightwatch": "^2.3.12",
    "nightwatch": "^2.4.0",
    "typescript": "^4.8.4"
  }
